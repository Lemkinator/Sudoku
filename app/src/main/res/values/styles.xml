<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle.SudokuButton" parent="ButtonStyle.Colored">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@color/commonutils_primary_text_icon_color</item>
        <item name="android:drawableTint">@color/commonutils_primary_text_icon_color</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ButtonStyle.NumberButton" parent="ButtonStyle.SudokuButton">
        <item name="android:padding">0dp</item>
        <item name="android:autoSizeStepGranularity">1sp</item>
        <item name="android:autoSizeMaxTextSize">25sp</item>
        <item name="android:autoSizeMinTextSize">10sp</item>
        <item name="android:autoSizeTextType">uniform</item>
        <item name="android:ellipsize">none</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="ButtonStyle.NumberButton.Portrait" parent="ButtonStyle.NumberButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="ButtonStyle.NumberButton.Land" parent="ButtonStyle.NumberButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

</resources>