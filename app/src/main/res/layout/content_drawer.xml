<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    app:layout_location="drawer_panel">

    <LinearLayout
        android:id="@+id/drawerListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/drawer_item_selector"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/drawerItemAchievements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drawer_item_list_ripple"
            android:gravity="center_vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:gravity="start|center"
                android:paddingEnd="14dp"
                tools:ignore="RtlSymmetry">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_oui_crown_outline"
                    app:tint="?android:textColorPrimary" />

            </FrameLayout>

            <TextView
                android:id="@+id/drawerItemAchievementsTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:paddingVertical="12dp"
                android:singleLine="true"
                android:text="@string/play_games_achievements"
                android:textColor="?android:textColorPrimary"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/drawerItemLeaderboards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drawer_item_list_ripple"
            android:gravity="center_vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:gravity="start|center"
                android:paddingEnd="14dp"
                tools:ignore="RtlSymmetry">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_oui_community_outline"
                    app:tint="?android:textColorPrimary" />

            </FrameLayout>

            <TextView
                android:id="@+id/drawerItemLeaderboardsTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:paddingVertical="12dp"
                android:singleLine="true"
                android:text="@string/play_games_leaderboards"
                android:textColor="?android:textColorPrimary"
                android:textSize="17sp" />

        </LinearLayout>

        <View style="@style/DrawerDividerStyle" />

        <LinearLayout
            android:id="@+id/drawerItemAboutApp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drawer_item_list_ripple"
            android:gravity="center_vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:gravity="start|center"
                android:paddingEnd="14dp"
                tools:ignore="RtlSymmetry">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_oui_info_outline"
                    app:tint="?android:textColorPrimary" />

            </FrameLayout>

            <TextView
                android:id="@+id/drawerItemAboutAppTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:paddingVertical="12dp"
                android:singleLine="true"
                android:text="@string/about_app"
                android:textColor="?android:textColorPrimary"
                android:textSize="17sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/drawerItemAboutMe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drawer_item_list_ripple"
            android:gravity="center_vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:gravity="start|center"
                android:paddingEnd="14dp"
                tools:ignore="RtlSymmetry">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_oui_contact_outline"
                    app:tint="?android:textColorPrimary" />

            </FrameLayout>

            <TextView
                android:id="@+id/drawerItemAboutMeTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:paddingVertical="12dp"
                android:singleLine="true"
                android:text="@string/about_me"
                android:textColor="?android:textColorPrimary"
                android:textSize="17sp" />

        </LinearLayout>

        <View style="@style/DrawerDividerStyle" />

        <LinearLayout
            android:id="@+id/drawerItemSettings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/drawer_item_list_ripple"
            android:gravity="center_vertical">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="14dp"
                android:gravity="start|center"
                android:paddingEnd="14dp"
                tools:ignore="RtlSymmetry">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_oui_settings_outline"
                    app:tint="?android:textColorPrimary" />

            </FrameLayout>

            <TextView
                android:id="@+id/drawerItemSettingsTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:paddingVertical="12dp"
                android:singleLine="true"
                android:text="@string/settings"
                android:textColor="?android:textColorPrimary"
                android:textSize="17sp" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>