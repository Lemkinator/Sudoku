<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <dev.oneuiproject.oneui.widget.MarginsTabLayout
        android:id="@+id/fragment_statistics_sub_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <dev.oneuiproject.oneui.widget.RoundFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:roundedCorners="top_left|top_right">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/statistics_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </dev.oneuiproject.oneui.widget.RoundFrameLayout>
</LinearLayout>
